<% @loadCategory = @categories.load %>
<div class="mt30">
	<div class="columns">
		<div class="column">
			<%= label_tag "総件数 " + @categories.total_count.to_s + " 件　" + (@categories.offset_value + 1).to_s + " 件 〜 " + (@categories.offset_value + @categories.length).to_s + " 件までを表示"%>
		</div>
	</div>
	<table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth mb30 parent_three_point_reader">
		<thead>
			<tr>
				<th style="width:30%">カテゴリ</th>
				<th style="width:10%">問題数</th>
				<th style="width:10%">いいね数</th>
				<th style="width:20%">登録者</th>
				<th class="hidden-part" style="width:10%">登録日時</th>
				<th style="width:20%">チャレンジ</th>
			</tr>
		</thead>
		<tbody>
			<% @loadCategory.each do |category| %>
			<tr>
				<td class="categoryName child_three_point_reader" title="<%= category.category_name %>"><%= category.category_name %></td>
				<td class="questionCount" title="<%= category.question_ids.count %>"><%= category.question_ids.count %></td>
				<td class="goodCount" title="<%= category.good_categories.count %>"><%= category.good_categories.count %></td>
				<td class="register child_three_point_reader" title="<%= category.created_user_name %>"><%= category.created_user_name %></td>
				<td class="regDate hidden-part"><%= category.created_at.strftime("%Y/%m/%d") %></td>
				<td class="cg">
					<a target="_blank" href="/public_category_cg_start/?category_id=<%= category.id %>" >
						<span class="button button-icon-include is-rounded is-small is-info hidden-part" ><%= fa_icon "hand-o-right", text: "チャレンジ" %></span>
						<span class="hidden-part-wide"><%= fa_icon "hand-o-right", text: "" %></span>
					</a>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<%= paginate(@categories) %>